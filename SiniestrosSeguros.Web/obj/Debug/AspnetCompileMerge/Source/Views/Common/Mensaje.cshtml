@model SiniestrosSeguros.DTO.ModelCustoms.Mensaje

@{
    if (Model.esError)
    {
        ViewBag.Title = "Error";
    }
    else
    {
        ViewBag.Title = "Confirmación";
    }

}

@if (Model.status == System.Net.HttpStatusCode.NotFound)
{

    <section class="container" id="msjConfirmacion">
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                <h3 class="panel-title pull-left">@ViewBag.Title</h3>
            </div>
            <div class="panel-body">
                <h1 class="text-danger" style="font-size:18px;">Al realizar la operación ocurrió lo siguiente:</h1>
                <h2 class="text-danger" style="font-size:16px;">@Html.DisplayFor(m => m.mensaje)</h2>
            </div>
        </div>
    </section>
}
else
{

    if (Model.esError)
    {
        <h1 class="text-danger" style="font-size:18px;" id="msjConfirmacion">Al realizar la operación ocurrió lo siguiente:</h1>
        <h2 class="text-danger" style="font-size:16px;">@Html.DisplayFor(m => m.mensaje)</h2>
    }
    else
    {
        <h1 class="text-success" style="font-size:16px;" id="msjConfirmacion">La operación se ejecuto correctamente</h1>
    }

}

<script>

    $(document).ready(function () {
        var modal = $('#msjConfirmacion').parents('.modal');
        $('html').css('overflow', 'hidden');
        $('#msjConfirmacion').parents('.modal').css('z-index', 1051);
        $('#msjConfirmacion').parents('.modal-dialog').css('width', '500px');
        $('div[class="modal-backdrop fade show"]:last-child').css('z-index', 1050);
        $('#msjConfirmacion').parents('.show').find('.close').click(function () {
            $('html').removeAttr('style');     
            modal.find('.modal-dialog').removeAttr('style');
            modal.removeAttr('style');
        })
    })
</script>