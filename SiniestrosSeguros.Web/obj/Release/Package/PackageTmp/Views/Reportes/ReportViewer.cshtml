@model SiniestrosSeguros.DTO.ModelViews.Reportes.RamoPolizaParamModelView
@using System.Configuration
@{
    ViewBag.Title = "Reporte Valores Declarados";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<script src="~/Scripts/Reporte/reporteRamoPoliza.js?version=@ConfigurationManager.AppSettings["version"]">
</script>

<section class="container" id="ReportViewer">
    <div class="panel panel-primary">
        <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Reporte Valores Declarados</h3>
        </div>
        <div class="panel-body">
            <div class="alert alert-danger" role="alert" id="divError" style="margin:15px;"></div>
            <div class="row" style="margin: 20px;">
                <div class="col-md-12 form-group">
                    @Html.LabelFor(m => m.Empresa, new { @class = "control-label" })
                     
                    @Html.DropDownList("ListaEmpresa", null, "Todos", htmlAttributes: new { @class = "form-control", @onchange = "mostrarDetalle()" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.LabelFor(m => m.IdConstante, new { @class = "control-label" })
                    @Html.DropDownList("ListaRamoPoliza", null, "Seleccione...", htmlAttributes: new { @class = "form-control", @id = "selRamoPoliza", @onchange = "mostrarDetalle()" })
                </div>
                <div class="col-md-3 form-group">
                    @Html.LabelFor(model => model.FechaVigenciaIni, htmlAttributes: new { @class = "control-label" })
                    <div>
                        <div class="input-group" id="datetimepicker">
                            @Html.TextBoxFor(m => m.FechaVigenciaIni, new { @class = "form-control inputDate" })
                            <span class="input-group-addon" style="margin:8px 0px 0px 5px;">
                                @*<span class="ti-calendar"></span>*@
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.FechaVigenciaIni, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-3 form-group">
                    @Html.LabelFor(model => model.FechaVigenciaFin, htmlAttributes: new { @class = "control-label" })
                    <div>
                        <div class="form-group">
                            <div class="input-group date" id="datetimepicker2">
                                @Html.TextBoxFor(m => m.FechaVigenciaFin, new { @class = "form-control inputDate" })
                                <span class="input-group-addon" style="margin:8px 0px 0px 5px;">
                                    @*<span class="ti-calendar"></span>*@
                                </span>
                            </div>
                            @Html.ValidationMessageFor(model => model.FechaVigenciaFin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-1 form-group">
                    <div style="margin-top:50%;">
                        <div class="input-group" id="datetimepicker">
                            @Html.Label("label", "Detalle", new { @style = "margin:0px 0px 0px -15px;" })
                            <span> </span>
                            <span class="input-group-addon" style="margin:0px 0px 0px 4px;">
                                @Html.CheckBox("chkDetalle", false, new { @disabled = "disabled" })
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    @*<a class="btn btn-primary pull-right" id="crear2" href="#" onclick="showModalCreate()">Crear</a>*@
                    <input style="margin-top:28px;" type="button" id="btnSubmit" value="Descargar Reporte" onclick="descargarReporte()" />
                </div>


            </div>
        </div>
    </div>
</section>



