<script>
   

    function globalScript() {
        var count = 0;
        var refreshIntervalId = setInterval(function () {
            var progress = document.querySelector('.pace-progress')

            if (typeof (progress) != 'undefined' && progress != null) {
                var attr = progress.getAttribute('style');
                if (attr.indexOf('100') > 0 && count == 0 && progress != null) {
                    if (document.querySelector('[class="pace pace-active"]') != null) {
                        document.querySelector('[class="pace pace-active"]').remove();
                    }
                    count++;

                } else if (count > 0 && progress != null) {
                    if (document.querySelector('[class="pace pace-active"]') != null) {
                        document.querySelector('[class="pace pace-active"]').remove();
                    }
                }
            }
        }, 1000);


        var currentHref = function () {

            var elements = document.querySelectorAll('#menuPrueba li');
            for (var i = 0; i < elements.length; i++) {
                elements[i].removeAttribute('class');
                elements[i].setAttribute('class', 'treeview');
                if (elements[i].querySelector('a') != null) {
                    var current = elements[i].querySelector('a').getAttribute('data-href');
                    var arrays = elements[i].querySelector('a').getAttribute('data-href-array');

                    var array = arrays == null ? '' : arrays.split(',');

                    if (document.location.href.indexOf(current) > 0 && array.length == 0) {
                        if (array.length == 0) {
                            elements[i].setAttribute('class', 'treeview active');
                            break;
                        } else {

                        }
                    } else {

                        for (var a in array) {
                            if (document.location.href.indexOf(array[a]) > 0) {
                                elements[i].setAttribute('class', 'treeview active');
                                break;
                            }
                        }
                    }

                }
            }

        }
        currentHref();
    }

  

    globalScript();

</script>